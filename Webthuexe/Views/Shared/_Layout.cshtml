                            <p class="nav-link">Chào mừng <br> @Session["Username"].ToString()</p><ul class="dropdown">
                                <li><a href="@Url.Action("Account_information", "Account", new { makh = Session["IDuser"] })">thong tin tai khoản</a></li>
                                <li><a href="@Url.Action("index", "Home", new { dx = false })">Đăng xuất</a></li>
                            </ul>
                        </li>

                    }

                </ul>
                @using (Html.BeginForm("index", "Home", FormMethod.Post, new { @class = "input-group mb-3" }))
                {


                    <input type="text" class="form-control" name="timkiem" placeholder="Search for car..." aria-label="Search" aria-describedby="search-button" style="width: 60%" width="50">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>

                    </div>


                }
            </div>

        </div>
