<body>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("index", "Home")">My<span>World</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item " style="padding-left: 0px; padding-right: 0px; "><a Class="nav-link" href="@Url.Action("index", "Home")" style="padding-left: 10px;padding-right:10px;">Thuê xe</a></li>
                    <li class="nav-item " style="padding-left: 0px; padding-right: 0px; "><a Class="nav-link" href="@Url.Action("about", "Home")" style="padding-left: 10px;padding-right:10px;">Giới thiệu</a></li>
                    @if (Session["Username"] == null)
                    {
                        <li class="nav-item " style="padding-left: 5px;padding-right:5px;">
                            <a Class="nav-link" href="@Url.Action("login", "Login")" style="padding-left: 10px;padding-right:10px;">Đăng nhập</a>

                        </li>
                    }
                    else
                    {
                        <li class="nav-item " style="padding-left: 0px; padding-right: 0px;"><a Class="nav-link" href="@Url.Action("Rent_car", "Rent")" style="padding-left: 10px;padding-right:10px;">Danh sách xe<br>đang thuê</a></li>
