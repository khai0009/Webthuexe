@{
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}
@model Webthuexe.Models.show
<link rel="stylesheet" href="~/Content/css/custome.css">
<div class="card text-center">
    <div class="back-index">
        <a href="@Url.Action("login", "Login",new {area = ""})" class="float-left">< Đã có tài khoản</a>
    </div>
    <div class="card-body">

        <h5 class="card-title mb-4">Đăng ký</h5>
        @if (Session["checkregister"].ToString() == "false")
        {
            <p style="color: red; font-weight: bold">Thông tin đăng ký không hợp lệ</p>
        }

        @using (Html.BeginForm("register", "Login", FormMethod.Post))
        {   
            <div class="row form-group">
                <div class="col">
                    <input type="text" class="form-control" name="lastname" placeholder="Họ">
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="middlename" placeholder="Lót">
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="firstname" placeholder="Tên">
                </div>
            </div><div class="form-check form-check-inline form-group">
                <input class="form-check-input" type="radio" name="gt" id="nam" value="nam">
                <label class="form-check-label" for="inlineRadio1">Nam</label>
            </div><div class="form-check form-check-inline form-group">
                <input class="form-check-input" type="radio" name="gt" id="nu" value="nu">
                <label class="form-check-label" for="inlineRadio2">Nữ</label>
            </div>
            <div class="row form-group">
                <div class="col">
                    <input class="form-control" type="text" id="matp" name="sn" placeholder="Số nhà" />
                </div>
                <div class="col">
                    <input class="form-control" list="phuong" type="text" name="px" placeholder="Chọn phương/xã" />
                </div>

            </div>
            <div class="row form-group">
                <div class="col">
                    <input class="form-control" list="quan" type="text" name="q" placeholder="Chọn quận/huyện" />
                </div>
                <div class="col">

                    <input class="form-control" list="tp" type="text" id="matp" name="tp" placeholder="Chọn thành phố/tỉnh" />
                </div>
            </div>
            <div class="col">
                <datalist id="tp">

                    @foreach (var tp in Model.tTHANHPHO_TINHs.ToList())
                    {

                        <option value="@tp.TENTP_TINH" />
                    }
                </datalist>

                <datalist id="quan">
                    @foreach (var quan in Model.qUAN_HUYENs.ToList())
                    {

                        <option value="@quan.TENQH" />
                    }
                </datalist>

                <datalist id="phuong">
                    @foreach (var phuong in Model.pHUONG_XAs.ToList())
                    {

                        <option value="@phuong.TENXP" />
                    }

                </datalist>

            </div>

            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" maxlength="10" id="SDT" name="sdt" placeholder="Số điện thoại">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" maxlength="16" id="password" name="password" placeholder="Mật khẩu">
                <small id="passwordHelpInline" class="text-muted">
                    mật khẩu phải từ 8 - 16 kí tự
                </small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" maxlength="16" id="repassword" name="repassword" placeholder="Nhập lại mật khẩu">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
        }
    </div>
</div>
<!-- loader -->
<div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px">
        <circle class="path-bg"
                cx="24"
                cy="24"
                r="22"
                fill="none"
                stroke-width="4"
                stroke="#eeeeee" />
        <circle class="path"
                cx="24"
                cy="24"
                r="22"
                fill="none"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke="#F96D00" />
    </svg>
</div>
<style>

    .back-index a {
        margin-left: 20px;
    }

        .back-index a:hover {
            margin-left: 25px;
            color: green;
            transition-duration: 0.7s;
        }
</style>
