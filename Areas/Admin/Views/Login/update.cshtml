@{
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}
<link rel="stylesheet" href="~/Content/css/custome.css">
<div class="card text-center">
    <div class="back-index">
        <a href="@Url.Action("login", "Loginadmin")" class="float-left">< Đã có tài khoản</a>
    </div>
    <div class="card-body">

        <h5 class="card-title mb-4">Đăng ký</h5>

        <form>
            <div class="form-group">
                <input type="Text" class="form-control" id="Name" placeholder="Họ và tên">
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1">
                <label class="form-check-label" for="inlineRadio1">Nam</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="0">
                <label class="form-check-label" for="inlineRadio2">Nữ</label>
            </div>
            <div class="form-group">
                <input type="email" class="form-check" id="email" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" maxlength="10" id="SDT" placeholder="Số điện thoại">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" maxlength="16" id="password" placeholder="Mật khẩu">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" maxlength="16" id="repassword" placeholder="Nhập lại mật khẩu">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Cập nhật</button>

        </form>
    </div>
</div>
<!-- loader -->
<div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px">
        <circle class="path-bg"
                cx="24"
                cy="24"
                r="22"
                fill="none"
                stroke-width="4"
                stroke="#eeeeee" />
        <circle class="path"
                cx="24"
                cy="24"
                r="22"
                fill="none"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke="#F96D00" />
    </svg>
</div>
<style>
    
    .back-index a {
        margin-left: 20px;
    }

        .back-index a:hover {
            margin-left: 25px;
            color: green;
            transition-duration: 0.7s;
        }
</style>
